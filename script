//Choose your options (pick only one):

//a. With npm install and npm test:

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
        if [[ $? -eq 0 ]]; then
            echo "Running npm test..."
            npm t
        fi
    fi
}


//b. WITHOUT npm test (ONLY npm install): 

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
    fi
}

//c. WITH .gitignore file created . (so you dont need to delete the node modules)

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
        if [[ $? -eq 0 ]]; then
            echo "Running npm test..."
            npm test
        fi
        
        if [[ ! -f ".gitignore" ]]; then
            echo "Creating .gitignore file..."
            echo "node_modules/" > .gitignore
            echo "# Add other ignore rules here" >> .gitignore
        fi
    fi
}

