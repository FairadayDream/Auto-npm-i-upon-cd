//Choose your options (pick only one):

//a. With npm install and npm test:

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
        if [[ $? -eq 0 ]]; then
            echo "Running npm test..."
            npm t
        fi
    fi
}


//b. WITHOUT npm test (ONLY npm install): 

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
    fi
}

//c. WITH .gitignore file created . (so you dont need to delete node_modules)

function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
        if [[ $? -eq 0 ]]; then
            echo "Running npm test..."
            npm test
        fi
        
        if [[ ! -f ".gitignore" ]]; then
            echo "Creating .gitignore file..."
            echo "node_modules/" > .gitignore
            echo "# Add other ignore rules here" >> .gitignore
        fi
    fi
}



function cd {
    builtin cd "$@"
    if [[ -f "package.json" ]]; then
        echo "Running npm install..."
        npm install
        if [[ $? -eq 0 ]]; then
            echo "Running npm test..."
            npm test
        fi
        
        if [[ ! -f ".gitignore" ]]; then
            echo "Creating .gitignore file..."
            echo "node_modules/" > .gitignore
            echo "cypress/plugins" >> .gitignore
            echo "cypress/screenshots" >> .gitignore
            echo "cypress/videos" >> .gitignore
            echo "logs" >> .gitignore
            echo "*.log" >> .gitignore
            echo "coverage" >> .gitignore
            echo ".idea/" >> .gitignore
            echo ".vscode/" >> .gitignore
            echo "*.tmp" >> .gitignore
            echo "*.swp" >> .gitignore
            echo "*.swo" >> .gitignore
            echo ".DS_Store" >> .gitignore
            echo "Thumbs.db" >> .gitignore
            echo ".env" >> .gitignore
            echo "dist/" >> .gitignore

            echo "# Add other ignore rules here" >> .gitignore
        fi
    fi
}
